bootstrap: docker
from: continuumio/miniconda3

%post
cd /opt/
wget https://raw.githubusercontent.com/liuyangzzu/nano-compare/1a6f774d119b34e533d5ade4becf36b32f817bed/environment.yml
chmod 755 environment.yml
/opt/conda/bin/conda env create -f environment.yml

%runscript
exec /opt/conda/envs/$(head -n 1 /opt/environment.yml | cut -f 2 -d ' ')/bin/"$@"
