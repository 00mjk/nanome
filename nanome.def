bootstrap: docker
from: continuumio/miniconda3

%post
cd /opt/
wget https://raw.githubusercontent.com/liuyangzzu/nano-compare/5e97ddc67f70c56d3fbc9795ee5dc2b7d15c5a12/environment.yml
chmod 755 environment.yml
/opt/conda/bin/conda env create -f environment.yml
apt-get install -y procps

%runscript
exec /opt/conda/envs/$(head -n 1 /opt/environment.yml | cut -f 2 -d ' ')/bin/"$@"
