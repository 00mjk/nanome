 * -------------------------------------------------
 *  Nextflow config file for running tests
 * -------------------------------------------------
 * Defines bundled input files and everything required
 * to run a fast and simple test.
 */

params {
	dsname = 'DEMODATA'
    runid = "DEMODATA_RRBS"
    input = 'test_data/demo.fast5.reads.tar.gz'
    isfile = true
    ntask = 10
    analysisPrefix="${dsname}-N${ntask}"
